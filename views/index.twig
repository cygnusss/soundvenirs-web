<!DOCTYPE html>
<html>
    <head>
        <title>Soundvenirs</title>
        <link rel="stylesheet" href="/css/default.css">
        <script src="/js/bower_components/jquery/dist/jquery.js"></script>
        <script>
            $(document).ready(function() {
                setTimeout(function() {
                    $('#logo').fadeOut(3000);
                    $('#upload').fadeTo(3000, 0.8);
                }, 2000);
                setTimeout(function() {
                    $('#upload-hint').fadeTo(3000, 0.8);
                }, 10000);
            });
        </script>
    </head>
    <body>
        <div id="logo"></div>
        <div id="upload">
            <form id="form" action="/upload" method="post" enctype="multipart/form-data">
                {{ form_widget(form) }}
                <input type="submit" value="Upload">
            </form>
        </div>
        <div id="upload-hint">
            Click on <em>Upload</em> to upload your mp3 file.
        </div>
    </body>
</html>