#!/bin/bash

PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:$PATH

rsync -ac --progress $2/ /opt/soundvenirs-backend/ || exit 1
chown -R www-data:www-data /opt/soundvenirs-backend/var || exit 1

cd /opt/soundvenirs-backend/
make production || exit 1
chown -R www-data:www-data /var/lib/soundvenirs-backend || exit 1
